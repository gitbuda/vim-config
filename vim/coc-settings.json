{
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp"],
      "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/"],
      "initializationOptions": {
        "compilationDatabaseDirectory": "build",
        "cache": {
          "directory": "/tmp/ccls"
        }
      }
    }
  }
}
